        <activity
            android:name=".AllApplications"
            android:exported="false" />
        <activity
            android:name=".LeaveApplication"
            android:exported="false" />
        <activity
            android:name=".AllAttendance"
            android:exported="false" />
        <activity
            android:name=".AllTeachersActivity"
            android:exported="false" />
        <activity
            android:name=".AdminControl"
            android:exported="false" />
        <activity
            android:name=".Signupteacher"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CheckPerformance" />
        <activity android:name=".Staffverify" />
        <activity android:name=".AllStudentsActivity" />
        <activity android:name=".StaffLogin" />
        <activity android:name=".StudentLogin" />
