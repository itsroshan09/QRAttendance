<!-- box_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Background color for the box -->
     <solid android:color="#EBD9F6F1" /><!-- You can change the color as per your preference -->

    <!-- Border color and thickness -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- You can change the border color and thickness as per your preference -->

    <!-- Corner radius for rounded corners -->
    <corners android:radius="8dp" /> <!-- You can change the corner radius as per your preference -->
</shape>
